{
  "name": "grouper-mcp",
  "version": "0.2.0",
  "description": "MCP server for Grouper web services integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport http --port 3050",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/index.ts --transport http --port 3050",
    "docker:build": "docker build -t grouper-mcp .",
    "docker:run": "docker run --rm -p 3050:3050 --env-file .env grouper-mcp",
    "docker:up": "docker-compose up",
    "docker:up:dev": "docker-compose --profile dev up grouper-mcp-dev",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
